<h1>Display your Pirate here</h1>
<li>Name: <%= @pirate.name %></li>
<li>Weight: <%= @pirate.weight %></li>
<li>Height: <%= @pirate.height %></li>

<h2>Display your ships here</h2>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p><br>
  </div><br>
  <% end %>
